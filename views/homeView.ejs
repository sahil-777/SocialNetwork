            <button onclick="showFeed('<%=feedResult[i].feedname%>')">Comment</button>
            <br><br>
            &nbsp;&nbsp;&nbsp;&nbsp;
        <% } %>
    </div>
    <script>
        $('#search-user-form').submit(function(){
        let username = $('#search-text').val();
        //alert(username);
        $(this).attr('action', "/account/" + username);
        }); 
    </script>
</body>
